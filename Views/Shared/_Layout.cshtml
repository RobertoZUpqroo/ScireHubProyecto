<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScireHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScireHub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar 10px navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-bg text-white box-shadow mb-0">
            <div class="container-fluid navbarcontenedor flex-row">
                <div class="">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/ciencia (1) 4.png" /></a>
                    <a class="navbar-brand align-items-center" asp-area="" asp-controller="Home" asp-action="Index">ScireHub</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 justify-content-end align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Articulos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Investigadores</a>
                        </li>
                        <li class="nav-item botondecoration">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Iniciar sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Registrarse</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header

    <div class="container-fluid m-0 inicio vh-100 fondo">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fondo">
        <div class="container">
            &copy; 2023 - ScireHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
